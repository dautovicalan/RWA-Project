@model PublicSite.ViewModels.ApartmentViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="sort-filter-container">
    <div class="single-item">
        <label>Rooms</label>
        <input type="number" />
    </div>
    <div class="single-item">
        <label>Adults</label>
        <input type="number" />
    </div>
    <div class="single-item">
        <label>Children</label>
        <input type="number" />
    </div>
    <div class="single-item-special">
        <div class="single-item">
            <label>Destination</label>
            <input type="number" />
            <button>Go</button>
        </div>
        <div>
            <label>Sort by</label>
            <input type="text" />
        </div>
    </div>    
</div>
<div class="apartments-list">
    @foreach (var singleApartment in Model.Apartments)
    {
        @Html.Partial("_ApartmentContainer", singleApartment)
    }
</div>