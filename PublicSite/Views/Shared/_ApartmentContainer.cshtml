@model PublicSite.Models.Apartment
<div class="apartment-container">
    <div class="apartment-stars">
        <div>
            @for (int i = 1; i <= 5; i++)
            {
                if (Model.ApartmentStars >= i)
                {
                    <span class="fa fa-star checked"></span>
                }
                else
                {
                    <span class="fa fa-star"></span>
                }
            }
        </div>
    </div>
    <div class="apartment-information">
        @if (Model.ApartmentMainImage != null)
        {
            <img src=@("data:image/png;base64," + Convert.ToBase64String(Model.ApartmentMainImage.ImageData)) width="250" height="250" />
        }
        else
        {
            <img src="https://media.istockphoto.com/photos/europe-modern-complex-of-residential-buildings-picture-id1165384568?k=20&m=1165384568&s=612x612&w=0&h=CAnAr3uJtmkr0IQ2EPgm0IBoo8oCm-FEYEtyor8X_9I=" width="250" height="250" />
        }
        <section>
            <h3>@Model.Name</h3>
            <ul>
                <li>@Model.CityName</li>
                <li>@Model.BeachDistance M @PublicSite.Resource.BeachDistance</li>
                <li>@Model.RoomCount @PublicSite.Resource.Rooms</li>
                <li>@Model.MaxAdults @PublicSite.Resource.MaxAdults</li>
                <li>@Model.MaxChildren @PublicSite.Resource.MaxChildren</li>
            </ul>
            <p>@PublicSite.Resource.Price @Model.Price €</p>
        </section>
    </div>
    <div class="apartment-reservation">      
        @Html.ActionLink(PublicSite.Resource.ApartContButton, "ApartmentInformation", "Home", new {id = Model.Id}, new {@class = "button"})       
    </div>
</div>
